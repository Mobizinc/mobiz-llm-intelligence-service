# Mobiz LLM Intelligence Service - Environment Configuration

# API Keys
OPENAI_API_KEY=your_openai_api_key_here
AZURE_OPENAI_API_KEY=your_azure_openai_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/

# LangGraph Studio Development
LANGSMITH_TRACING=false
LANGSMITH_API_KEY=your_langsmith_key_here
LANGCHAIN_PROJECT=mobiz-llm-intelligence

# Service Configuration
LOG_LEVEL=INFO
ENVIRONMENT=development
SERVICE_PORT=8000
SERVICE_HOST=0.0.0.0

# LLM Provider Configuration
DEFAULT_LLM_PROVIDER=openai
DEFAULT_MODEL=gpt-5
ENABLE_FALLBACK=true
REQUEST_TIMEOUT=300
MAX_RETRIES=3

# Azure Services (if using Azure integrations)
AZURE_KEYVAULT_URL=https://your-keyvault.vault.azure.net/
AZURE_TABLE_STORAGE_ACCOUNT=your_storage_account
AZURE_TABLE_STORAGE_KEY=your_storage_key

# MCP Configuration
MCP_GLOBAL_ENABLED=true
MCP_DYNAMIC_DISCOVERY=true
MCP_REFRESH_INTERVAL=300

# Caching
REDIS_URL=redis://localhost:6379
CACHE_TTL_HOURS=2
ENABLE_CACHING=true

# Security
API_KEY_HEADER=Authorization
ALLOWED_ORIGINS=*
TRUSTED_HOSTS=*

# Performance
MAX_CONCURRENT_REQUESTS=100
MAX_ANALYSIS_TIME_MINUTES=15
ENABLE_REQUEST_LOGGING=true

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30